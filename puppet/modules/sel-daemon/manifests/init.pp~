# == Class: sel-deamon
#

class sel-deamon
{
  $devstack_dir = '/home/stack/devstack'
 
  file { "$devstack_dir/lib/sel-deamon":
	owner => $user,
    group => $user,
    mode => '0755',
    source  => 'puppet:///modules/sel-deamon/sel-deamon',
	require => Exec['devstack_clone'],
  }

  file { "$devstack_dir/extras.d/90-sel-deamon.sh":
	owner => $user,
    group => $user,
    mode => '0755',
    source  => 'puppet:///modules/sel-deamon/90-sel-deamon.sh',
	require => Exec['devstack_clone'],
  }
}
